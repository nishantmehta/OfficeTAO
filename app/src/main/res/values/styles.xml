    <style name="Theme.Tao" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_tao</item>
        <item name="popupMenuStyle">@style/PopupMenu.Tao</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tao</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Tao</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Tao</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Tao</item>
        <item name="actionModeBackground">@drawable/cab_background_top_tao</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_tao</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tao</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Tao.Widget</item>

    </style>

    <style name="ActionBar.Solid.Tao" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_tao</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_tao</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_tao</item>
        <item name="progressBarStyle">@style/ProgressBar.Tao</item>
    </style>

    <style name="ActionBar.Transparent.Tao" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_tao</item>
        <item name="progressBarStyle">@style/ProgressBar.Tao</item>
    </style>

    <style name="PopupMenu.Tao" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tao</item>
    </style>

    <style name="DropDownListView.Tao" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_tao</item>
    </style>

    <style name="ActionBarTabStyle.Tao" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tao</item>
    </style>

    <style name="DropDownNav.Tao" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_tao</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tao</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_tao</item>
    </style>

    <style name="ProgressBar.Tao" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tao</item>
    </style>

    <style name="ActionButton.CloseMode.Tao" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_tao</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Tao.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Tao</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tao</item>
    </style>

    <style name="AppTheme"  parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ff70d2f8</item>
    </style>
    <style name="elv_fade_animation">
        <item name="@android:windowEnterAnimation">@anim/elv_popup_show</item>
        <item name="@android:windowExitAnimation">@anim/elv_popup_hide</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>



    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@color/numbers_text_color</item>
    </style>

    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textColor">@color/ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
